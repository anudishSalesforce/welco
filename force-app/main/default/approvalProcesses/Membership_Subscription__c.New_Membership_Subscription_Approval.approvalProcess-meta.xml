<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>creator</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>annat@welco.ca</submitter>
        <type>user</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>sarahj@welco.ca</submitter>
        <type>user</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Organization__c</field>
        <field>Employee__c</field>
        <field>Membership_ID_Number__c</field>
        <field>Membership_Type__c</field>
        <field>Number_of_Licenses__c</field>
        <field>Effective_Date__c</field>
        <field>Expiration_Date__c</field>
        <field>Additional_Notes__c</field>
        <field>Cost__c</field>
        <field>Owner</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Membership_Approved</name>
                <type>Alert</type>
            </action>
            <action>
                <name>Update_Approved_By_to_Yes</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Update_Main_Status</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>mstark@welco.ca</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>Unanimous</whenMultipleApprovers>
        </assignedApprover>
        <description>All new memberships/subscriptions must be approved by the Sales Director.</description>
        <label>Management Approval</label>
        <name>Management_Approval</name>
        <rejectionActions>
            <action>
                <name>Membership_Rejected</name>
                <type>Alert</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <description>All new memberships/subscriptions must be approved by the Sales Director.</description>
    <emailTemplate>Sales_and_Marketing/Membership_Approval_Request</emailTemplate>
    <enableMobileDeviceAccess>true</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Membership_Subscription__c.CreatedDate</field>
            <operation>notEqual</operation>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Update_Approved_By_to_No</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Update_Approved_By_to_Pending</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Status_to_Identified</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>New Membership/Subscription Approval</label>
    <processOrder>1</processOrder>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
