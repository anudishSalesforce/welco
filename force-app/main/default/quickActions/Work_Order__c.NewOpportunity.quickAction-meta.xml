<?xml version="1.0" encoding="UTF-8"?>
<QuickAction xmlns="http://soap.sforce.com/2006/04/metadata">
    <description>Quick action to generate a new opportunity from a work order.</description>
    <fieldOverrides>
        <field>AccountId</field>
        <formula>Work_Order__c.Account__c</formula>
    </fieldOverrides>
    <fieldOverrides>
        <field>Customer_PO__c</field>
        <formula>Work_Order__c.PO_Number__c</formula>
    </fieldOverrides>
    <fieldOverrides>
        <field>Name</field>
        <formula>Work_Order__c.Equipment_Description__c</formula>
    </fieldOverrides>
    <fieldOverrides>
        <field>Opportunity_Details__c</field>
        <formula>&quot;Manufacturer Model #: &quot;  +  Work_Order__c.Manufacturer_Model__c  + 
 BR()  + 
&quot;Manufacturer Serial #: &quot; + Work_Order__c.Serial__c +
 BR()  + 
&quot;Customer Item #: &quot;  +   Work_Order__c.Customer_Item__c</formula>
    </fieldOverrides>
    <fieldOverrides>
        <field>Opportunity_Source__c</field>
        <literalValue>Phone/Email (Inside Sales)</literalValue>
    </fieldOverrides>
    <fieldOverrides>
        <field>Opportunity_Type__c</field>
        <literalValue>Units</literalValue>
    </fieldOverrides>
    <fieldOverrides>
        <field>Primary_Contact__c</field>
        <formula>Work_Order__c.Contact__c</formula>
    </fieldOverrides>
    <fieldOverrides>
        <field>Reference__c</field>
        <formula>Work_Order__c.Quote_Number__c</formula>
    </fieldOverrides>
    <fieldOverrides>
        <field>Sale_Type__c</field>
        <literalValue>Regular</literalValue>
    </fieldOverrides>
    <fieldOverrides>
        <field>StageName</field>
        <literalValue>Opportunity Identified</literalValue>
    </fieldOverrides>
    <fieldOverrides>
        <field>Type_of_Placement__c</field>
        <literalValue>Repair Replacement</literalValue>
    </fieldOverrides>
    <fieldOverrides>
        <field>Welco_Order__c</field>
        <formula>Work_Order__c.AdagioOrderNumber__c</formula>
    </fieldOverrides>
    <optionsCreateFeedItem>true</optionsCreateFeedItem>
