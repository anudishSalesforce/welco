<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>creator</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>annat@welco.ca</submitter>
        <type>user</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>sarahj@welco.ca</submitter>
        <type>user</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Owner</field>
        <field>Name</field>
        <field>RecordType</field>
        <field>Type</field>
        <field>StartDate</field>
        <field>EndDate</field>
        <field>Description</field>
        <field>BudgetedCost</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Campaign_Approved_Alert</name>
                <type>Alert</type>
            </action>
            <action>
                <name>Update_Approved_by_Management_to_Yes</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Update_Status_to_Approved</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <type>adhoc</type>
            </approver>
        </assignedApprover>
        <description>Approval required from Sales Director, with notification sent to President.</description>
        <label>Management Approval</label>
        <name>Management_Approval</name>
        <rejectionActions>
            <action>
                <name>Campaign_Rejected_Alert</name>
                <type>Alert</type>
            </action>
            <action>
                <name>Update_Status_to_IdentifiedR</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <description>All new campaigns to be approved by both the Sales Director, with notification going to President.</description>
    <emailTemplate>Sales_and_Marketing/CampaignApprovalRequest</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Campaign.CreatedDate</field>
            <operation>notEqual</operation>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Update_Approved_by_Management_to_No</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>StatusUpdate</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Approved_by_Management_to_Pending</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>New Campaign Approval</label>
    <processOrder>1</processOrder>
    <recallActions>
        <action>
            <name>Update_Approved_By_to_None</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
